<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>검색 결과</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .card {
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 20px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }
        .card-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .card-body {
            padding: 15px;
        }
        .card-title {
            font-size: 1.25rem;
            margin: 0 0 10px;
        }
        .card-text {
            font-size: 1rem;
            margin: 0 0 10px;
        }
        .card-text a {
            color: #007bff;
            text-decoration: none;
        }
        .card-text a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>검색 결과</h1>
    <div class="container">
        <% photos.forEach(function(photo) { %>
            <div class="card">
                <img src="<%= photo.imageUrl %>" alt="<%= photo.title %>" class="card-img">
                <div class="card-body">
                    <h5 class="card-title"><%= photo.title %></h5>
                    <p class="card-text">
                        주소: <a href="/location?address=<%= encodeURIComponent(photo.address) %>"><%= photo.address %></a>
                    </p>
                    <p class="card-text">설명: <%= photo.description %></p>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
